{
  "name": "server-action",
  "version": "0.3.1",
  "description": "Type-safe, validated server action helper for React and Next.js.",
  "author": "Ayterx (github.com/ayterx)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayterx/server-action.git"
  },
  "license": "MIT",
  "keywords": [
    "action",
    "next.js",
    "react",
    "server action",
    "server"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./client": {
      "import": {
        "types": "./dist/es/client.d.mts",
        "default": "./dist/es/client.mjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/es/server.d.mts",
        "default": "./dist/es/server.mjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee --minify",
    "format:check": "prettier --check . --ignore-path .gitignore",
    "format": "prettier --write . --ignore-path .gitignore",
    "lint": "eslint .",
    "publish": "pnpm build && pnpm publish",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "client-only": "^0.0.1",
    "next": "^14.2.3",
    "react": "19.0.0-beta-9d76c954cf-20240510",
    "server-only": "^0.0.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^15.0.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "npm:types-react@beta",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "bunchee": "^5.1.4",
    "eslint": "^8.57.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "expect-type": "^0.19.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "@types/react": "npm:types-react@beta"
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18.17"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked",
      "plugin:testing-library/react"
    ],
    "ignorePatterns": [
      "dist",
      "eslint.config.js",
      "pnpm-lock.yaml"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": [
        "warn",
        {
          "fixStyle": "separate-type-imports",
          "prefer": "type-imports"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    }
  }
}
